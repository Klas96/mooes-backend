# =============================================================================
# LOOPIA VPS ENVIRONMENT VARIABLES
# =============================================================================

# --- Server Configuration ---
PORT=8080
NODE_ENV=development # or 'production' for VPS

# --- Database Configuration ---
# For local/dev:
# DATABASE_URL=sqlite://:memory:
# For Production VPS:
# DATABASE_URL=postgresql://mooves_user:PASSWORD@localhost:5432/mooves_prod

DATABASE_URL=postgresql://mooves_user:your-password@localhost:5432/mooves_dev

# --- JWT Configuration ---
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# --- OpenAI Configuration (for AI chat) ---
OPENAI_API_KEY=your_openai_api_key_here

# --- Local Image Storage Configuration (VPS) ---
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=5242880
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 

# --- Email Configuration (Loopia) ---
EMAIL_USER=mooves@klasholmgren.se
EMAIL_PASSWORD=your-app-password
EMAIL_HOST=mailcluster.loopia.se
EMAIL_PORT=587
EMAIL_SECURE=false
FRONTEND_URL=https://your-domain.com

# --- Google Play Billing ---
GOOGLE_PLAY_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PLAY_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_PLAY_PACKAGE_NAME=com.example.dating_app


# --- CORS ---
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000